{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": "./",
    "lib": [
      "dom",
      "es7",
    ],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "noImplicitAny": false,
    "allowJs": true,
    "types" : ["node", "chai", "mocha", "sinon", "three", "webdriverio"],
    "allowSyntheticDefaultImports": true,     /* Allow default imports from modules with no default export. This does not affect code emit, just typechecking. */
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "./test/e2e/compiled-output/"
  },
  // "paths": {
  //   "*": [ "./test/e2e/*" ],
  //   "src/*": ["./test/e2e/src/*"]
  // },
  "include": [
    "./test/e2e/src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "compileOnSave": false
}