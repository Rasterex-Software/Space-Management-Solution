{
    "extends": [
        "tslint:recommended"
    ],
    "project": "./tsconfig.json",
    "linterOptions":{
        "exclude": [
            "node_modules/**/*",
            "build/",
            "src/*.js"
        ]
    },
    "rules": {
        "interface-name": false,
        "interface-over-type-literal": false,
        "variable-name": {
            "options": [
                "ban-keywords",
                "check-format"
            ]
        },
        "object-literal-sort-keys": false,
        "member-ordering": [
            true,
            {
                "order": [
                    "static-field",
                    "instance-field",
                    "static-method",
                    "instance-method"
                ]
            }
        ],
        "no-console": false,
        "quotemark": {
            "options": ["single", "avoid-escape"]
        }
    },
    "rulesDirectory": []
}